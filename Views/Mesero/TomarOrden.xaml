<Page x:Class="Rapid_Plus.Views.Mesero.TomarOrden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Rapid_Plus.Views.Mesero"
      mc:Ignorable="d"
      Title="TomarOrden" Height="805" Width="1200" Loaded="Page_Loaded" >
    <Grid Background="White">
        
        <DataGrid Name="dgPlatillos" AutoGenerateColumns="False" IsReadOnly="true" ItemsSource ="{Binding}" Margin="60,172,60,417" Width="700">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N.Platillo" Binding="{Binding IdPlatillo}"/>
                <DataGridTextColumn Header="Platillo" CanUserResize="False" Binding="{Binding NombrePlatillo}"/>
                <DataGridTextColumn Header="Descripción" CanUserResize="False" Binding="{Binding DescripcionPlatillo}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <DataGrid Name="dgOrdenes" AutoGenerateColumns="False" IsReadOnly="true" ItemsSource ="{Binding}" Margin="60,435,60,154" Width="500">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N.Orden" Binding="{Binding IdOrden}"/>
                <DataGridTextColumn Header="Orden" CanUserResize="False" Binding="{Binding Orden}"/>
                <DataGridTextColumn Header="Cantidad" CanUserResize="False" Binding="{Binding Cantidad}"/>
                <DataGridTextColumn Header="Mesa" Binding="{Binding Mesa}"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoOrden}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
