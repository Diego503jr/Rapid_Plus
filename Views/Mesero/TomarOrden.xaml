<Page x:Class="Rapid_Plus.Views.Mesero.TomarOrden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Rapid_Plus.Views.Mesero"
      mc:Ignorable="d"
      Title="TomarOrden" Height="750" Width="950" Loaded="Page_Loaded" >
    <Grid Background="White">
        <Rectangle Margin="20,60,20,500" Stroke="#FFD63C3C" Width="900" />
        <Label Background="#FFD63C3C"  Width="900" Height="50"  Content="Generar Orden" Foreground="White" FontSize="30" Margin="25,24,25,676" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal"  Width="500" Height="40" Margin="226,115,224,595"  VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBox Name="cmbMesa" Width="180" FontSize="20"  materialDesign:HintAssist.Hint="Número de Mesa" Margin="0,0,70,0" SelectionChanged="cmbMesa_SelectionChanged" />
            <Label Content="Número de Orden: " FontSize="20"/>
            <TextBlock Name="txbOrden" Width="80"  Height="40" Margin="0,0,120,0" FontSize="20" materialDesign:HintAssist.Hint="Nombre Cliente" IsEnabled="False" />
        </StackPanel>
        <DataGrid Name="dgPlatillos" AutoGenerateColumns="False" IsReadOnly="true" ItemsSource ="{Binding}" Margin="25,351,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="450">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N.Platillo" Binding="{Binding IdPlatillo}"/>
                <DataGridTextColumn Header="Platillo" CanUserResize="False" Binding="{Binding NombrePlatillo}"/>
                <DataGridTextColumn Header="Descripción" CanUserResize="False" Binding="{Binding DescripcionPlatillo}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Name="dgOrdenes" AutoGenerateColumns="False" IsReadOnly="true" ItemsSource ="{Binding}"  VerticalAlignment="Top" HorizontalAlignment="Right"  Margin="0,351,55,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N.Orden" Binding="{Binding IdOrden}"/>
                <DataGridTextColumn Header="Orden" CanUserResize="False" Binding="{Binding Orden}"/>
                <DataGridTextColumn Header="Cantidad" CanUserResize="False" Binding="{Binding Cantidad}"/>
                <DataGridTextColumn Header="Mesa" Binding="{Binding Mesa}"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoOrden}"/>
            </DataGrid.Columns>
        </DataGrid>
        

    </Grid>
</Page>
