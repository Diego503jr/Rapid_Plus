<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rapid_Plus.Views.Administrador"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      x:Class="Rapid_Plus.Views.Administrador.Contactos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contactos" Background="White">

    <Grid>
        <GroupBox Header="Usuarios" Margin="35,32,30,225">
            <Grid>
                <TextBox 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Width="120" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Usuario"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="48,16,0,0"/>
                <PasswordBox 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="120" 
                    Margin="204,16,0,0" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Clave"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                <TextBox 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Width="143" 
                    Margin="341,16,0,0" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Nombres"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap"
                    VerticalAlignment="Top" 
                    Width="163" 
                    Margin="507,16,0,0" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Apellidos"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap"
                    VerticalAlignment="Top" 
                    Width="120" 
                    Margin="204,80,0,0" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="DUI"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <ComboBox 
                    HorizontalAlignment="Left" 
                    Margin="48,80,0,0" 
                    VerticalAlignment="Top" 
                    Width="120" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Rol"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                <ComboBox 
                    HorizontalAlignment="Left" 
                    Margin="341,80,0,0" 
                    VerticalAlignment="Top" 
                    Width="120" 
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Sexo"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                <DatePicker 
                    HorizontalAlignment="Left" 
                    Margin="650,98,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="18"/>
                <Label 
                    Content="Fecha nacimiento: " 
                    HorizontalAlignment="Left" 
                    Margin="489,99,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="18"/>

            </Grid>
        </GroupBox>
    </Grid>
</Page>
