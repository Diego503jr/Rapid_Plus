<Page x:Class="Rapid_Plus.Views.Cajero.FacturarOrden"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rapid_Plus.Views.Cajero"
      mc:Ignorable="d"
      Title="FacturarOrden" Loaded="Page_Loaded" Height="583" Width="1086">

    <Grid Background="White" Margin="0,-139,-34,0">

        <GroupBox   
         HorizontalAlignment="Left" MinWidth="900" 
         Height="218" Margin="132,23,0,0" VerticalAlignment="Top" UseLayoutRounding="False" >
            <Grid>
                <StackPanel Height="50" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,50,0"/>
                <TextBox x:Name="txtMesa" 
        HorizontalAlignment="Left" 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Width="160" 
        FontSize="18"
        materialDesign:HintAssist.Hint="Numero de Mesa"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,10,0,0"/>

                <TextBox x:Name="txtCliente" 
        HorizontalAlignment="Left" 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Width="160" 
        Margin="10,89,0,0" 
        FontSize="18"
        materialDesign:HintAssist.Hint="Cliente"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox x:Name="txtUsuario" 
        HorizontalAlignment="Left" 
        TextWrapping="Wrap"
        VerticalAlignment="Top" 
        Width="160" 
        Margin="232,91,0,0" 
        FontSize="18"
        materialDesign:HintAssist.Hint="Usuario"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <Label x:Name="lbFecha" 
        Content="Fecha nacimiento: " 
        HorizontalAlignment="Left" 
        Margin="463,112,0,0" 
        VerticalAlignment="Top" 
        FontSize="18"/>
                <DatePicker x:Name="dtpFechaNacimiento" 
        HorizontalAlignment="Left" 
        Margin="623,112,0,0" 
        VerticalAlignment="Top" 
        FontSize="18"/>
                <Button x:Name="btnBuscar" 
            BorderBrush="{x:Null}" Background="#FF008592" 
            Content="Buscar" FontSize="18" 
            Margin="366,29,418,121"/>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="dgOrdenes" AutoGenerateColumns="False" IsReadOnly="true" ItemsSource ="{Binding}" Margin="58,266,26,196" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.316"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.744"/>
                </TransformGroup>
            </DataGrid.RenderTransform>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Número de orden" Width="*" Binding="{Binding IdOrden}"/>
                <DataGridTextColumn Header="Platillo" CanUserResize="False" Width="*" Binding="{Binding Orden}"/>
                <DataGridTextColumn Header="Cantidad" CanUserResize="False" Width="*" Binding="{Binding Cantidad}"/>
                <DataGridTextColumn Header="Subtotal" CanUserResize="False" Width="*" Binding="{Binding Cantidad}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="TOTAL" HorizontalAlignment="Left" Margin="50,555,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="RECIBIDO" HorizontalAlignment="Left" Margin="50,604,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="DEVOLUCION" HorizontalAlignment="Left" Margin="50,644,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.504,0.882"/>
        <TextBox HorizontalAlignment="Left" Margin="186,595,0,0" TextWrapping="Wrap" Text="RECIBIDO" VerticalAlignment="Top" Width="120" FontSize="20" Height="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="186,555,0,0" TextWrapping="Wrap" Text="TOTAL" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="191,648,0,0" TextWrapping="Wrap" Text="TOTAL" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btnRealizar" 
                    BorderBrush="{x:Null}" Background="#FF008592" 
                    Content="Realizar" FontSize="18" 
                    Margin="560,581,442,92"/>
        <Button x:Name="btnCancelar" 
            BorderBrush="{x:Null}" Background="#FF008592" 
            Content="Cancelar" FontSize="18" 
            Margin="698,590,304,100"/>


    </Grid>
</Page>
